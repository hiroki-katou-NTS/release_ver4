package nts.uk.ctx.basic.app.find.position.hoatt;

import java.util.List;
import java.util.Optional;
import java.util.stream.Collectors;

import javax.ejb.Stateless;
import javax.inject.Inject;

import nts.uk.ctx.basic.dom.organization.position.hoatt.CmnmtJobTitleRepository;

@Stateless
public class PositionFinder {

	@Inject
	private CmnmtJobTitleRepository repository;
	
	public Optional<PositionDto> find(String companyCode,String jobCode){
		return this.repository.find(companyCode,jobCode).map(c->PositionDto.fromDomain(c));
	}
	public List<PositionDto> findAll(String companyCode){
		return this.repository.getPosition(companyCode).stream().map(c->PositionDto.fromDomain(c)).collect(Collectors.toList());
	}
}

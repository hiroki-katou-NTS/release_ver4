package nts.uk.ctx.basic.app.find.position.laitv;

import java.util.List;
import java.util.Optional;
import java.util.stream.Collectors;

import javax.ejb.Stateless;
import javax.inject.Inject;
import nts.uk.ctx.basic.organization.position_ba.PositionRepository_ba;

/**
 * @author laitv
 *
 */

@Stateless
public class PositionFinder_ba {

	@Inject
	PositionRepository_ba positionRepository_ba;

	public Optional<PositionDto_ba> getSinglePosition(String companyCode, String jobCode) {
		return positionRepository_ba.getSinglePosition(companyCode, jobCode).map(c -> PositionDto_ba.fromDomain(c));
	}

	public List<PositionDto_ba> getAllPosition(String companyCode) {
		return positionRepository_ba.getAllPosition(companyCode)
				.stream().map(c -> PositionDto_ba.fromDomain(c))
				.collect(Collectors.toList());
	}

}

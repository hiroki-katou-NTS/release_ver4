package nts.uk.ctx.basic.app.find.position.laitv;

import java.util.List;
import java.util.Optional;import java.util.stream.Collector;
import java.util.stream.Collectors;

import javax.ejb.Stateless;
import javax.inject.Inject;

import nts.uk.ctx.basic.organization.position.laitv.PositionRepository;

@Stateless
public class PositionFinderLaiChimTo {

	@Inject
	PositionRepository positionRepository;

	public Optional<PositionDto> getSinglePositon(String companyCode, String jobCode) {
		return positionRepository.getSinglePosition(companyCode, jobCode)
				.map(d -> PositionDto.fromDomain(d));
	}
	
	public List<PositionDto> getAllPosition(String companycode) {
		
		return positionRepository.getAllPosition(companycode)
				.stream().map(d -> PositionDto.fromDomain(d))
				.collect(Collectors.toList());
	}

}

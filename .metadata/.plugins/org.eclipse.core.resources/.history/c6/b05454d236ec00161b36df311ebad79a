 * 
 */
package nts.uk.ctx.basic.organization.position_ba;

import java.util.Date;

import lombok.Getter;
import nts.arc.time.GeneralDate;
import nts.uk.ctx.basic.organization.position.laitv.Position;
import nts.uk.shr.com.primitive.Memo;

/**
 * @author laitv
 *
 */

@Getter
public class Position_ba {

	GeneralDate endDate;

	GeneralDate startDate;

	JobCode_ba jobCode;

	JobName_ba jobName;

	ExternalCode_ba jobOutCode;

	Memo memo;

	String companyCode;

	public Position_ba(GeneralDate endDate, GeneralDate startDate, JobCode_ba jobCode, JobName_ba jobName,
			ExternalCode_ba jobOutCode, Memo memo, String companyCode) {
		super();
		this.endDate = endDate;
		this.startDate = startDate;
		this.jobCode = jobCode;
		this.jobName = jobName;
		this.jobOutCode = jobOutCode;
		this.memo = memo;
		this.companyCode = companyCode;
	}

	public static Position createSimpleFromJavaType(Date endDate, Date startDate, String jobCode, String jobName,
			String jobOutCode, String memo, String companyCode) {
		return new Position(GeneralDate.legacyDate(endDate), GeneralDate.legacyDate(startDate), new JobCode_ba(jobCode),
				new JobName_ba(jobName), new ExternalCode_ba(jobOutCode), companyCode, new Memo(memo));
	}

}

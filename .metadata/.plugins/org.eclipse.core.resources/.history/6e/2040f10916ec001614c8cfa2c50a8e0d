 */
package nts.uk.ctx.basic.ws.position.laitv;

import java.util.List;
import java.util.Optional;

import javax.inject.Inject;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;

import nts.arc.layer.ws.WebService;
import nts.uk.ctx.basic.app.commands.position.laitv.AddPositionCommand;
import nts.uk.ctx.basic.app.commands.position.laitv.AddPositionCommandHandler;
import nts.uk.ctx.basic.app.commands.position.laitv.RemovePositionCommand;
import nts.uk.ctx.basic.app.commands.position.laitv.RemovePositionCommandHandler;
import nts.uk.ctx.basic.app.commands.position.laitv.UpdatePositionCommand;
import nts.uk.ctx.basic.app.commands.position.laitv.UpdatePositionCommandHandler;
import nts.uk.ctx.basic.app.find.position.laitv.PositionDto;
import nts.uk.ctx.basic.app.find.position.laitv.PositionFinderLaiChimTo;

/**
 * @author laitv
 *
 */

@Path("/ctx/basic/position")
@Produces("application/json")
public class PositionWebService extends WebService {

	@Inject
	PositionFinderLaiChimTo finder;

	@Inject
	AddPositionCommandHandler add;

	@Inject
	RemovePositionCommandHandler remove;

	@Inject
	UpdatePositionCommandHandler update;

	@POST
	@Path("find/{companycode}/{jobcode}")
	public Optional<PositionDto> find(@PathParam("companycode") String companyCode, 
							@PathParam("jobcode") String jobcode) {
		return this.finder.getSinglePositon(companyCode, jobcode);
	}

	@POST
	@Path("find/{companycode}")
	public List<PositionDto> findAll(@PathParam("companycode") String companycode) {
		return this.finder.getAllPosition(companycode);
	}
	
	@POST
	@Path("add")
	public void add(AddPositionCommand command){
		this.add.handle(command);
	}
	
	@POST
	@Path("update")
	public void update(UpdatePositionCommand command){
		this.update.handle(command);
	}
	
	@POST
	@Path("remove")
	public void remove(RemovePositionCommand command){
		this.remove.handle(command);
	}

}
